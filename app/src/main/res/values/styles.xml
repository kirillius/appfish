<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Roboto">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Roboto.MatchName">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Roboto.StatsItem">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Roboto.StatsTableNames">
