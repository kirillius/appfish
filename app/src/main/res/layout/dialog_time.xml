<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_36sdp"
    android:layout_marginEnd="@dimen/_36sdp"
    android:background="@drawable/notification_back"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:text="Введите текст"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="@dimen/_11ssp" />

    <LinearLayout
        android:id="@+id/ll_time_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_hours"
            android:layout_width="0dp"
            android:layout_height="@dimen/_19sdp"
            android:layout_marginStart="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_weight="6"
            android:background="@drawable/button_bottom_gradient"
            android:digits="0123456789"
            android:hint="ЧАС"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9ssp" />

        <EditText
            android:id="@+id/et_min"
            android:layout_width="0dp"
            android:layout_height="@dimen/_19sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_23sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_weight="6"
            android:background="@drawable/button_bottom_gradient"
            android:digits="0123456789"
            android:hint="МИН"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9ssp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_sec"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="34dp"
            android:layout_weight="6"
            android:background="@drawable/button_bottom_gradient"
            android:digits="0123456789"
            android:hint="СЕК"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/_9ssp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_time_edit"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/ok"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9sdp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9sdp"
            tools:ignore="RtlCompat" />

    </LinearLayout>


</RelativeLayout>
