<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_stage_name"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="2"
        android:textAlignment="textStart"
        android:textAppearance="@style/Roboto"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stage_status"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_weight="3"
        android:background="@drawable/button_bottom_gradient"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/iv_stages_stats"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/stages_stats_open" />

</LinearLayout>