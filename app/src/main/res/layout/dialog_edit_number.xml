<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_36sdp"
    android:layout_marginEnd="@dimen/_36sdp"
    android:background="@drawable/notification_back"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:text="Введите текст"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="@dimen/_11ssp" />

    <EditText
        android:id="@+id/et_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_19sdp"
        android:layout_below="@id/tv_dialog"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:background="@color/white"
        android:digits="0123456789."
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp" />

    <LinearLayout
        android:id="@+id/ll_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dialog"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/ok"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9sdp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9sdp"
            tools:ignore="RtlCompat" />

    </LinearLayout>


</RelativeLayout>
