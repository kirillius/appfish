<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="96dp"
    android:layout_marginEnd="96dp"
    android:background="@drawable/notification_back"
    android:gravity="center_horizontal"
    android:maxHeight="700dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="34dp"
        android:text="Введите текст"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="28sp" />

    <ListView
        android:id="@+id/lv_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center">

    </ListView>


    <EditText
        android:visibility="gone"
        android:id="@+id/et_addinfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/lv_dialog"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bottom_gradient"
        android:hint="@string/addinfo_hint"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textColor="@color/white"
        android:textSize="@dimen/dropdown_list_text_size" />


    <LinearLayout
        android:id="@+id/ll_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_addinfo"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/ok"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>


</RelativeLayout>
