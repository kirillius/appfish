<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_36sdp"
    android:layout_marginEnd="@dimen/_36sdp"
    android:background="@drawable/notification_back"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:text="Введите текст"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="@dimen/_11ssp" />

    <ListView
        android:id="@+id/lv_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textAlignment="center"
        android:maxHeight="@dimen/_155sdp"
        android:layout_above="@id/et_addinfo"/>


    <EditText
        android:id="@+id/et_addinfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/button_bottom_gradient"
        android:hint="@string/addinfo_hint"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textColor="@color/white"
        android:textSize="@dimen/dropdown_list_text_size"
        android:visibility="gone"
        android:layout_above="@id/ll_dialog_buttons"/>


    <LinearLayout
        android:id="@+id/ll_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/ok"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9sdp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9sdp"
            tools:ignore="RtlCompat" />

    </LinearLayout>


</RelativeLayout>
