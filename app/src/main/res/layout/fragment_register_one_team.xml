<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".fragments.RegisterOneTeamFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_62sdp"
        android:layout_alignParentTop="true"
        android:background="@drawable/dark_gradient" />


    <RelativeLayout
        android:id="@+id/rl_captain_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp">

        <RelativeLayout
            android:id="@+id/rl_captain_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/iv_captain_photo"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_39sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/white_bakc"
                app:siShape="@drawable/logo_mask"
                app:siSquare="true" />

            <ImageView
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_56sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/captain" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_captain_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_toStartOf="@id/ll_captain_network"
            android:layout_toEndOf="@id/rl_captain_photo"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center"
            android:text="Капитан"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:id="@+id/ll_captain_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/captain_net1"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/facebook_icon" />

            <ImageButton
                android:id="@+id/captain_net2"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/inst_icon" />

            <ImageButton
                android:id="@+id/captain_net3"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/network_icon" />

            <ImageButton
                android:id="@+id/captain_net4"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"

                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/play_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_captain_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_captain_name"
            android:layout_marginStart="@dimen/_72sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_toStartOf="@id/ll_captain_network">

            <ImageButton
                android:id="@+id/ib_captain_pass"
                android:layout_width="0dp"
                android:layout_height="@dimen/_21sdp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_captain_med"
                android:layout_width="0dp"
                android:layout_height="@dimen/_21sdp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_captain_sport"
                android:layout_width="0dp"
                android:layout_height="@dimen/_21sdp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_assistant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_captain_info"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp">

        <RelativeLayout
            android:id="@+id/rl_assistant_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/iv_assistant_photo"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/white_bakc"
                app:siShape="@drawable/logo_mask"
                app:siSquare="true" />

            <ImageView
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_55sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/assistant" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_assistant_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_toStartOf="@id/ll_assistant_network"
            android:layout_toEndOf="@id/rl_assistant_photo"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center"
            android:text="Ассистент"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:id="@+id/ll_assistant_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/assistant_net1"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/facebook_icon" />

            <ImageButton
                android:id="@+id/assistant_net2"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/inst_icon" />

            <ImageButton
                android:id="@+id/assistant_net3"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/network_icon" />

            <ImageButton
                android:id="@+id/assistant_net4"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/play_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_assistant_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_assistant_name"
            android:layout_marginStart="@dimen/_72sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_toStartOf="@id/ll_assistant_network">

            <ImageButton
                android:id="@+id/ib_assistant_pass"
                android:layout_width="0dp"
                android:layout_height="@dimen/_21sdp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_assistant_med"
                android:layout_width="0dp"
                android:layout_height="@dimen/_21sdp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_assistant_sport"
                android:layout_width="0dp"
                android:layout_height="@dimen/_21sdp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_above="@id/grad_bottom"
        android:background="@drawable/light_gradient" />

    <View
        android:id="@+id/grad_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_62sdp"
        android:layout_alignTop="@id/ll_reg_team_buttons"
        android:background="@drawable/dark_gradient" />


    <LinearLayout
        android:id="@+id/ll_reg_team_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_assistant_info"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/se_margin"
        android:paddingTop="@dimen/_8sdp">

        <TextView
            android:id="@+id/tv_statistics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/team_stats"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_10ssp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_violations"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/voilations"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_10ssp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/button_end_reg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_below="@id/ll_reg_team_buttons"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/se_margin"
        android:background="@drawable/button_dark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_end_reg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/confirm_reg"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/progress_bar"
        android:layout_height="@dimen/progress_bar"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_270sdp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/se_margin"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_document"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/darkBlueBackground"/>

</RelativeLayout>