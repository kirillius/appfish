<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".fragments.RegisterOneTeamFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/dark_gradient" />


    <RelativeLayout
        android:id="@+id/rl_captain_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="32dp">

        <RelativeLayout
            android:id="@+id/rl_captain_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/iv_captain_photo"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/white_bakc"
                app:siShape="@drawable/logo_mask"
                app:siSquare="true" />

            <ImageView
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/captain" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_captain_name"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/ll_captain_network"
            android:layout_toEndOf="@id/rl_captain_photo"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center"
            android:text="Капитан"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="26sp" />

        <LinearLayout
            android:id="@+id/ll_captain_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/captain_net1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/facebook_icon" />

            <ImageButton
                android:id="@+id/captain_net2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/inst_icon" />

            <ImageButton
                android:id="@+id/captain_net3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/network_icon" />

            <ImageButton
                android:id="@+id/captain_net4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/play_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_captain_name"
            android:layout_marginStart="188dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/ll_captain_network">

            <ImageButton
                android:id="@+id/ib_captain_pass"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_captain_med"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_captain_sport"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_assistant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_captain_info"
        android:layout_marginStart="96dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp">

        <RelativeLayout
            android:id="@+id/rl_assistant_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/iv_assistant_photo"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/white_bakc"
                app:siShape="@drawable/logo_mask"
                app:siSquare="true" />

            <ImageView
                android:layout_width="146dp"
                android:layout_height="142dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/assistant" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_assistant_name"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/ll_assistant_network"
            android:layout_toEndOf="@id/rl_assistant_photo"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center"
            android:text="Ассистент"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="26sp" />

        <LinearLayout
            android:id="@+id/ll_assistant_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/assistant_net1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/facebook_icon" />

            <ImageButton
                android:id="@+id/assistant_net2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/inst_icon" />

            <ImageButton
                android:id="@+id/assistant_net3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/network_icon" />

            <ImageButton
                android:id="@+id/assistant_net4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/play_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_assistant_name"
            android:layout_marginStart="188dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/ll_assistant_network">

            <ImageButton
                android:id="@+id/ib_assistant_pass"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_assistant_med"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

            <ImageButton
                android:id="@+id/ib_assistant_sport"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/document_null" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_above="@id/grad_bottom"
        android:background="@drawable/light_gradient" />

    <View
        android:id="@+id/grad_bottom"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignTop="@id/ll_reg_team_buttons"
        android:background="@drawable/dark_gradient" />


    <LinearLayout
        android:id="@+id/ll_reg_team_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_assistant_info"
        android:layout_marginStart="96dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="96dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_statistics"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/statistics"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_violations"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_big_bottom_gradient"
            android:gravity="center_vertical"
            android:text="@string/voilations"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/button_end_reg"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@id/ll_reg_team_buttons"
        android:layout_marginStart="96dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_dark"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="64dp"
            android:text="@string/confirm_reg"
            android:textAppearance="@style/Roboto"
            android:textSize="30sp" />

    </RelativeLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="96dp"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_document"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/darkBlueBackground"/>

</RelativeLayout>