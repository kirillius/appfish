<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentActivity"
    android:background="@drawable/tour_back"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/top_menu_fragment"
        android:name="com.linaverde.fishingapp.TopMenuFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/content_tournament_fragment"
        android:name="com.linaverde.fishingapp.ChooseTournamentFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottom_fragment"
        android:name="com.linaverde.fishingapp.SocialMediaFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>