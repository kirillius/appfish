<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp">

    <TextView
        android:id="@+id/tv_team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_weight="1"
        android:text=" "
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="@dimen/_9ssp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/iv_team_logo"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/default_logo"
            app:siShape="@drawable/logo_mask"
            app:siSquare="true" />

        <ImageView
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/logo_frame" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="@dimen/_131sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_weight="3"
        android:background="@drawable/button_bottom_gradient"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/tournament"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="@dimen/_8ssp" />

    <ImageView
        android:id="@+id/iv_team_checkin"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/team_unckeck" />

</LinearLayout>