<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_back"
    android:orientation="vertical"
    tools:context=".activities.AuthActivity">

    <RelativeLayout
        android:id="@+id/rl_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"
        android:paddingTop="150dp">

        <TextView
            android:id="@+id/tv_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="@string/auth"
            android:textAppearance="@style/Roboto"
            android:textSize="40sp" />

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_auth"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Логин"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto" />

            <EditText
                android:id="@+id/et_login"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:background="@drawable/auth_edittext"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_login"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пароль"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/auth_edittext"
                    android:textAlignment="center"
                    android:textAppearance="@style/Roboto"
                    android:textColor="@color/white"
                    android:maxLength="15"
                    android:inputType="textPassword"/>

                <ImageButton
                    android:id="@+id/ib_password_show"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/watch"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"/>

            </RelativeLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/ll_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/auth_button" />


    </RelativeLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/setting_icon" />

</RelativeLayout>