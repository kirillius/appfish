<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/light_gradient" />

    <LinearLayout
        android:id="@+id/ll_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_9sdp">

        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Название команды"
            android:textAppearance="@style/Roboto"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="@dimen/_155sdp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/iv_team_logo"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/white_bakc"
            app:siShape="@drawable/logo_mask"
            app:siSquare="true" />

        <ImageView
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_62sdp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_frame" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="@dimen/se_margin"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/top_menu"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/menu_icon" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/setting_icon"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/top_gps"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/gps_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/se_margin"
        android:layout_marginTop="@dimen/se_margin"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/top_chat"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/chat_icon"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/top_message"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/message_icon" />

        <ImageButton
            android:id="@+id/top_sync"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/protocol_icon" />
    </LinearLayout>

</RelativeLayout>