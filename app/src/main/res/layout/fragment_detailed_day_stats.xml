<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatisticsFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_62sdp"
        android:layout_alignParentTop="true"
        android:background="@drawable/dark_gradient" />

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/se_margin"
        android:layout_marginBottom="@dimen/_13sdp"
        android:background="@drawable/button_bottom_gradient"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/tournament"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto.MatchName" />

    <LinearLayout
        android:id="@+id/ll_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team_name"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginEnd="@dimen/se_margin"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="@string/statistics"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_10ssp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_day_1"
                android:layout_width="@dimen/stats_day_image"
                android:layout_height="@dimen/stats_day_image"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/day_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/stats_day_text" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_day_2"
                android:layout_width="@dimen/stats_day_image"
                android:layout_height="@dimen/stats_day_image"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/day_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/stats_day_text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_day_3"
                android:layout_width="@dimen/stats_day_image"
                android:layout_height="@dimen/stats_day_image"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/day_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="3"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/stats_day_text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_day_4"
                android:layout_width="@dimen/stats_day_image"
                android:layout_height="@dimen/stats_day_image"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/day_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="4"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/stats_day_text" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_online"
            android:layout_width="0dp"
            android:layout_height="@dimen/stats_day_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/online" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_days"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginEnd="@dimen/se_margin"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="@string/date"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="@string/time"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="@string/fishes"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/_21sdp"
            android:layout_weight="2"
            android:text="@string/weight"
            android:textAlignment="textEnd"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_8ssp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/result"
        android:layout_below="@id/table_names"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginEnd="@dimen/se_margin"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignBottom="@id/lv_stats"
        android:background="@drawable/light_gradient" />

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_62sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/dark_gradient" />

        <LinearLayout
            android:id="@+id/ll_result_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/se_margin"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/se_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="2"
                android:text="Средний вес"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/_21sdp"
                android:layout_weight="2"
                android:text="Общий вес"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:layout_below="@id/ll_result_names"
            android:layout_marginStart="@dimen/se_margin"
            android:layout_marginEnd="@dimen/se_margin"
            android:background="@drawable/result_back">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="3"
                android:text="@string/result"
                android:textAlignment="textStart"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/_8ssp" />


            <TextView
                android:id="@+id/tv_result_avr_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/tv_result_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/_21sdp"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_result"
            android:layout_marginStart="@dimen/se_margin"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/se_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/stats_comment" />

    </RelativeLayout>


</RelativeLayout>