<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopMenuFragment"
    android:background="@android:color/transparent">

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/light_gradient" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:src="@drawable/judge_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:text="Имя пользователя"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/appin_logo"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp">

        <ImageButton
            android:id="@+id/top_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menu_icon"
            android:background="@null"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/setting_icon"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/top_gps"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gps_icon"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp">

        <ImageButton
            android:id="@+id/top_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chat_icon"
            android:background="@null"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/top_message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/message_icon"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/top_sync"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sync_icon"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

    </LinearLayout>

</RelativeLayout>