<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TournamentActivity"
    android:background="@android:color/transparent">

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/light_gradient" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp">

        <ImageView
            android:src="@drawable/judge_icon"
            android:layout_width="141px"
            android:layout_height="148px"
            android:layout_marginEnd="50px"/>

        <TextView
            android:text="Имя пользователя"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:fontFamily="@font/regular_md"/>

    </LinearLayout>

    <ImageView
        android:layout_width="205dp"
        android:layout_height="153dp"
        android:src="@drawable/appin_logo"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190px">

        <ImageButton
            android:id="@+id/top_menu"
            android:layout_width="105px"
            android:layout_height="90px"
            android:src="@drawable/menu_icon"
            android:background="@null"
            android:layout_marginBottom="60px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="92px"
            android:layout_height="92px"
            android:src="@drawable/setting_icon"
            android:background="@null"
            android:layout_marginBottom="50px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:id="@+id/top_gps"
            android:layout_width="123px"
            android:layout_height="110px"
            android:src="@drawable/gps_icon"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="96dp"
        android:layout_marginTop="190px">

        <ImageButton
            android:id="@+id/top_chat"
            android:layout_width="110px"
            android:layout_height="120px"
            android:src="@drawable/chat_icon"
            android:background="@null"
            android:layout_marginBottom="80px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/top_message"
            android:layout_width="93px"
            android:layout_height="68px"
            android:src="@drawable/message_icon"
            android:background="@null"
            android:layout_marginBottom="70px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/top_sync"
            android:layout_width="93px"
            android:layout_height="100px"
            android:src="@drawable/sync_icon"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>