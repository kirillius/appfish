<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".activities.TournamentActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/light_gradient" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_9sdp">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/judge_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:gravity="end"
                android:text="Тип пользователя"
                android:textAppearance="@style/Roboto"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/_155sdp"
            android:singleLine="true"
            android:text="Имя пользователя"
            android:textAppearance="@style/Roboto"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_58sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/appin_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginTop="@dimen/se_margin"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/top_menu"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/menu_icon" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/setting_icon"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/top_gps"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/gps_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/se_margin"
        android:layout_marginTop="@dimen/se_margin"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/top_chat"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/chat_icon"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/top_message"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/top_menu_button_margin"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/message_icon" />

        <ImageButton
            android:id="@+id/top_sync"
            android:layout_width="@dimen/top_menu_button"
            android:layout_height="@dimen/top_menu_button"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/protocol_icon" />
    </LinearLayout>

</RelativeLayout>