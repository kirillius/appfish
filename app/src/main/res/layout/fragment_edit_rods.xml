<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditRodsFragment">

    <ScrollView
        android:id="@+id/edit_rod_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/se_margin"
        android:layout_marginEnd="@dimen/se_margin"
        android:layout_above="@id/rl_button_rod_save">

        <LinearLayout
            android:id="@+id/ll_edit_diatance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_distance"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:digits="0123456789"
                android:inputType="number"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_depth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_diatance"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_depth"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:digits="0123456789"
                android:inputType="number"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_depth"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_attachment"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_rod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_attachment"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_rod"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_reel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_rod"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_reel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_reel"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_line"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_mounting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_mounting"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_wire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_mounting"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_wire"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_wire"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_bottom"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_press"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_press"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_press"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Расстояние"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_landmark"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_landmark"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="34dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Время"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/ll_time_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_hours"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/button_bottom_gradient"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textAlignment="center"
                    android:textAppearance="@style/Roboto"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    android:textAlignment="center"
                    android:textAppearance="@style/Roboto"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_min"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/button_bottom_gradient"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textAlignment="center"
                    android:textAppearance="@style/Roboto"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    android:textAlignment="center"
                    android:textAppearance="@style/Roboto"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_sec"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="60dp"
                    android:layout_weight="6"
                    android:background="@drawable/button_bottom_gradient"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textAlignment="center"
                    android:textAppearance="@style/Roboto"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_button_rod_save"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_dark"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="64dp"
            android:text="Сохранить удочку"
            android:textAppearance="@style/Roboto"
            android:textSize="30sp" />

    </RelativeLayout>

</RelativeLayout>