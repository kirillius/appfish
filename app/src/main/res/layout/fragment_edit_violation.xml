<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/se_margin"
    android:layout_marginEnd="@dimen/se_margin"
    android:orientation="vertical"
    tools:context=".fragments.EditFishFragment">

    <LinearLayout
        android:id="@+id/ll_edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Время"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:id="@+id/ll_time_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_hours"
                android:layout_width="0dp"
                android:layout_height="@dimen/_19sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                android:textAppearance="@style/Roboto"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/et_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/_19sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                android:textAppearance="@style/Roboto"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/et_sec"
                android:layout_width="0dp"
                android:layout_height="@dimen/_19sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:layout_weight="6"
                android:background="@drawable/button_bottom_gradient"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                android:textAppearance="@style/Roboto"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_edit_time">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Рыба"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_violation_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_12ssp"
            android:background="@drawable/button_bottom_gradient"
            android:text="Карп"
            android:layout_marginStart="@dimen/_23sdp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_button_violation_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/button_dark"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/violation_confirm"
            android:textAppearance="@style/Roboto"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

</RelativeLayout>