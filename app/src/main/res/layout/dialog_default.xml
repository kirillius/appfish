<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_36sdp"
    android:layout_marginEnd="@dimen/_36sdp"
    android:background="@drawable/notification_back"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:minHeight="@dimen/_24sdp"
        android:text="Введите текст"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_27sdp"
        android:layout_below="@id/tv_dialog"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/button_big_bottom_gradient"
        android:gravity="center_vertical"
        android:text="@string/ok"
        android:textAlignment="center"
        android:textAppearance="@style/Roboto"
        tools:ignore="RtlCompat" />

</RelativeLayout>